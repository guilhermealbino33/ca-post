{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "commonjs",
    "outDir":"./dist", 
    "rootDir": "./src",
    "baseUrl": "./src",                    
    "esModuleInterop": true, 
    "resolveJsonModule": true,                            
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false,                                      
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true                                 
  },

}
